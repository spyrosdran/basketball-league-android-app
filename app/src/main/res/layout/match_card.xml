<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/match_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@drawable/match_card"
    >

    <!-- Session, League & Back Button -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:padding="10sp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/league_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Greek HEBA A1"
                android:textColor="@color/white"
                android:textSize="14dp"
                />

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:id="@+id/details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In 12 Hours"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:backgroundTint="@color/fragmentBackground"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Main Card -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/home_team_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/img"
            android:src="@drawable/olympiacos"
            android:padding="2dp"
            android:layout_weight="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"/>

        <!-- Team Details -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olympiacos"
                    android:textAlignment="center"
                    android:layout_weight="40"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:layout_weight="20"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/away_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olympiacos"
                    android:layout_weight="40"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    />

            </LinearLayout>

            <!-- Score -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_team_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textAlignment="center"
                    android:layout_weight="50"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />


                <TextView
                    android:id="@+id/away_team_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="38"
                    android:layout_weight="50"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/away_team_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/img"
            android:src="@drawable/olympiacos"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="5"
            android:layout_margin="10dp"/>





    </LinearLayout>


</LinearLayout>

