<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundColor"/>
            <stroke android:color="#2B2B3D" android:width="2dp"/>
        </shape>
    </item>
    <!--
        item
            Defines a drawable to place in the layer drawable, in a position defined
            by its attributes.

            android:top
                Integer. The top offset in pixels.
            android:right
                Integer. The right offset in pixels.
            android:bottom
                Integer. The bottom offset in pixels.
            android:left
                Integer. The left offset in pixels.
    -->
    <item android:bottom="2sp">
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundColor"/>
            <!--stroke android:color="#246921" android:width="2dp"/-->
        </shape>
    </item>
</layer-list>